        Conditional:
            condition << (v0.selected ==  'Modulation Mode' )
            ObjectCombo:
                items <<  ['1','2','3','4','5','6','7','8']
                selected := model.value1
                tool_tip =('Index of Waveform Generator. Ex 1 for Waveform output 1')
            
    Container:v2:
        Label: v2txt:
            text = 'Value :'
