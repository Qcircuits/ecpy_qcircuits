            condition << ( (v0.selected == 'Modulation Mode') and model.value1 != '')
            ObjectCombo:
                items << ['Off',
                          str(int(float(model.value1))+int(float(model.value1))%2-1),
                          str(int(float(model.value1))+int(float(model.value1))%2),
                          'Advanced']
